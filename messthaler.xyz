server {
    listen 80;
	listen [::]:80;
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name messthaler.xyz;

	ssl_certificate     /etc/letsencrypt/live/messthaler.xyz-0001/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/messthaler.xyz-0001/privkey.pem;

    root /var/www/messthaler.xyz;

    location / {
		try_files "/text$uri";
	}

	location /images {
		autoindex on;
		root /var/www/messthaler.xyz;
	}

	location /documents {
		autoindex on;
		root /var/www/messthaler.xyz;
	}

	include "sites-enabled/default_config";
}

