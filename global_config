server {
	listen 80;

	return 308 https://guenthner.xyz;
}

proxy_cache_path /var/cache/nginx/ keys_zone=mycache:10m max_size=10g inactive=60m use_temp_path=off levels=1:2;

map $http_accept $webp_suffix{
    default "";
    "~*webp" ".webp";
}

map $upstream_http_cache_control $hdr_cache_control { # Used in default_config
    '' "max-age=31536000";
}